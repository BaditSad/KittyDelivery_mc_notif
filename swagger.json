{
    "openapi": "3.0",
    "info": {
        "version": "1.0.0",
        "title": "Notification API",
        "description": "API pour gérer les notifications"
    },
    "paths": {
        "/api/mc_notification": {
            "post": {
                "summary": "Créer une nouvelle notification",
                "description": "Créer une nouvelle notification pour un utilisateur",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Notification à créer",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "user_id": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "notification_type": {
                                    "type": "string",
                                    "example": "info"
                                },
                                "notification_message": {
                                    "type": "string",
                                    "example": "Your task is complete"
                                }
                            },
                            "required": [
                                "user_id",
                                "notification_type",
                                "notification_message"
                            ]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Notification créée avec succès"
                    },
                    "500": {
                        "description": "Erreur serveur"
                    }
                }
            },
            "get": {
                "summary": "Obtenir les notifications d'un utilisateur",
                "description": "Récupérer une liste de notifications pour un utilisateur donné",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "type": "integer",
                        "default": 1
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "type": "integer",
                        "default": 10
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des notifications",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "totalPages": {
                                    "type": "integer",
                                    "example": 5
                                },
                                "notifications": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/Notification"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Notifications non trouvées"
                    },
                    "500": {
                        "description": "Erreur serveur"
                    }
                }
            },
            "put": {
                "summary": "Mettre à jour une notification",
                "description": "Mettre à jour le statut de lecture d'une notification",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Détails de la notification à mettre à jour",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "notification_is_read": {
                                    "type": "boolean",
                                    "example": true
                                }
                            },
                            "required": [
                                "notification_is_read"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Notification mise à jour avec succès"
                    },
                    "404": {
                        "description": "Notification non trouvée"
                    },
                    "500": {
                        "description": "Erreur serveur"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Notification": {
                "type": "object",
                "properties": {
                    "user_id": {
                        "type": "integer"
                    },
                    "notification_date": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "notification_type": {
                        "type": "string"
                    },
                    "notification_message": {
                        "type": "string"
                    },
                    "notification_is_read": {
                        "type": "boolean"
                    }
                }
            }
        }
    }
}